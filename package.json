{
	"name": "openfoodfacts-sveltekit",
	"version": "0.0.1",
	"private": true,
	"description": "Modern JavaScript frontend for Open Food Facts",
	"license": "AGPL-3.0",
	"repository": {
		"type": "git",
		"url": "git+https://github.com/openfoodfacts/openfoodfacts-explorer.git"
	},
	"engines": {
		"node": ">=18.0.0",
		"pnpm": ">=8.0.0"
	},
	"scripts": {
		"dev": "vite dev",
		"build": "vite build",
		"preview": "vite preview",
		"check": "svelte-kit sync && svelte-check --tsconfig ./tsconfig.json",
		"check:watch": "svelte-kit sync && svelte-check --tsconfig ./tsconfig.json --watch",
		"lint": "prettier --check . && eslint .",
		"format": "prettier --write .",
		"api:folksonomy": "openapi-typescript https://api.folksonomy.openfoodfacts.org/openapi.json --output src/lib/api/folksonomy.d.ts",
		"api:prices": "openapi-typescript https://prices.openfoodfacts.net/api/schema --output src/lib/api/prices.d.ts",
		"api": "pnpm run api:folksonomy && pnpm run api:prices",
		"prepare": "husky",
		"pre-commit": "pnpm format"
	},
	"devDependencies": {
		"@crowdin/cli": "^4.7.0",
		"@eslint/eslintrc": "^3.3.1",
		"@eslint/js": "^9.24.0",
		"@iconify-json/mdi": "^1.2.3",
		"@iconify-json/simple-icons": "^1.2.31",
		"@iconify/tailwind": "^1.2.0",
		"@iconify/tailwind4": "^1.0.6",
		"@openfoodfacts/openfoodfacts-nodejs": "2.0.0-alpha.3",
		"@sveltejs/adapter-vercel": "^5.7.0",
		"@sveltejs/kit": "^2.20.4",
		"@sveltejs/vite-plugin-svelte": "^5.0.3",
		"@tailwindcss/postcss": "^4.1.3",
		"@tailwindcss/typography": "^0.5.16",
		"@types/leaflet": "^1.9.17",
		"@typescript-eslint/eslint-plugin": "^8.29.1",
		"@typescript-eslint/parser": "^8.29.1",
		"@vercel/speed-insights": "^1.2.0",
		"@zoom-image/core": "^0.40.0",
		"@zoom-image/svelte": "^0.3.0",
		"daisyui": "5.0.16",
		"eslint": "^9.24.0",
		"eslint-config-prettier": "^10.0.1",
		"eslint-plugin-svelte": "^3.5.1",
		"fuse.js": "^7.1.0",
		"globals": "^16.0.0",
		"html5-qrcode": "^2.3.8",
		"husky": "^9.1.7",
		"iso-639-1": "^3.1.5",
		"leaflet": "^1.9.4",
		"openapi-fetch": "^0.13.5",
		"openapi-typescript": "^7.6.1",
		"postcss": "^8.5.3",
		"prettier": "^3.5.2",
		"prettier-plugin-svelte": "^3.3.3",
		"prettier-plugin-tailwindcss": "^0.6.11",
		"svelte": "^5.25.8",
		"svelte-check": "^4.1.4",
		"svelte-eslint-parser": "^1.1.2",
		"svelte-i18n": "^4.0.1",
		"svelte-local-storage-store": "^0.6.4",
		"sveltekit-i18n": "^2.4.2",
		"tailwindcss": "^4.1.3",
		"tailwindcss-opentype": "^1.1.0",
		"tslib": "^2.8.1",
		"typescript": "^5.8.3",
		"typescript-eslint": "^8.29.1",
		"vite": "^6.2.6"
	},
	"type": "module",
	"packageManager": "pnpm@10.6.1+sha512.40ee09af407fa9fbb5fbfb8e1cb40fbb74c0af0c3e10e9224d7b53c7658528615b2c92450e74cfad91e3a2dcafe3ce4050d80bda71d757756d2ce2b66213e9a3",
	"pnpm": {
		"onlyBuiltDependencies": [
			"@vercel/speed-insights",
			"esbuild"
		]
	}
}
