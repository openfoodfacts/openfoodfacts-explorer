{
	"name": "openfoodfacts-sveltekit",
	"version": "0.0.1",
	"private": true,
	"description": "Modern JavaScript frontend for Open Food Facts",
	"license": "AGPL-3.0",
	"repository": {
		"type": "git",
		"url": "git+https://github.com/openfoodfacts/openfoodfacts-explorer.git"
	},
	"engines": {
		"node": ">=18.0.0",
		"pnpm": ">=8.0.0"
	},
	"scripts": {
		"dev": "vite dev",
		"build": "vite build",
		"preview": "vite preview",
		"check": "svelte-kit sync && svelte-check --tsconfig ./tsconfig.json",
		"check:watch": "svelte-kit sync && svelte-check --tsconfig ./tsconfig.json --watch",
		"lint": "prettier --check . && eslint .",
		"format": "prettier --write .",
		"api:folksonomy": "openapi-typescript https://api.folksonomy.openfoodfacts.org/openapi.json --output src/lib/api/folksonomy.d.ts",
		"api:prices": "openapi-typescript https://prices.openfoodfacts.net/api/schema --output src/lib/api/prices.d.ts",
		"api": "pnpm run api:folksonomy && pnpm run api:prices",
		"prepare": "husky",
		"pre-commit": "pnpm format"
	},
	"devDependencies": {
		"@crowdin/cli": "^4.7.1",
		"@eslint/eslintrc": "^3.3.1",
		"@eslint/js": "^9.28.0",
		"@fontsource-variable/plus-jakarta-sans": "^5.2.5",
		"@iconify-json/mdi": "^1.2.3",
		"@iconify-json/simple-icons": "^1.2.37",
		"@iconify/tailwind": "^1.2.0",
		"@iconify/tailwind4": "^1.0.6",
		"@openfoodfacts/openfoodfacts-nodejs": "2.0.0-alpha.6",
		"@sveltejs/adapter-vercel": "^5.7.2",
		"@sveltejs/kit": "^2.21.2",
		"@sveltejs/vite-plugin-svelte": "^5.1.0",
		"@tailwindcss/postcss": "^4.1.8",
		"@tailwindcss/typography": "^0.5.16",
		"@types/leaflet": "^1.9.18",
		"@typescript-eslint/eslint-plugin": "^8.33.1",
		"@typescript-eslint/parser": "^8.33.1",
		"@vercel/speed-insights": "^1.2.0",
		"@zoom-image/core": "^0.40.0",
		"@zoom-image/svelte": "^0.3.0",
		"daisyui": "5.0.43",
		"eslint": "^9.28.0",
		"eslint-config-prettier": "^10.1.5",
		"eslint-plugin-svelte": "^3.9.1",
		"fuse.js": "^7.1.0",
		"globals": "^16.2.0",
		"html5-qrcode": "^2.3.8",
		"husky": "^9.1.7",
		"iso-639-1": "^3.1.5",
		"leaflet": "^1.9.4",
		"openapi-fetch": "^0.14.0",
		"openapi-typescript": "^7.8.0",
		"postcss": "^8.5.4",
		"prettier": "^3.5.2",
		"prettier-plugin-svelte": "^3.4.0",
		"prettier-plugin-tailwindcss": "^0.6.12",
		"svelte": "^5.33.17",
		"svelte-check": "^4.2.1",
		"svelte-eslint-parser": "^1.2.0",
		"svelte-i18n": "^4.0.1",
		"svelte-local-storage-store": "^0.6.4",
		"sveltekit-i18n": "^2.4.2",
		"tailwindcss": "^4.1.8",
		"tailwindcss-opentype": "^1.1.0",
		"tslib": "^2.8.1",
		"typescript": "^5.8.3",
		"typescript-eslint": "^8.33.1",
		"vite": "^6.3.5",
		"vite-plugin-static-copy": "^3.0.0"
	},
	"type": "module",
	"packageManager": "pnpm@10.8.1+sha512.c50088ba998c67b8ca8c99df8a5e02fd2ae2e2b29aaf238feaa9e124248d3f48f9fb6db2424949ff901cffbb5e0f0cc1ad6aedb602cd29450751d11c35023677",
	"pnpm": {
		"onlyBuiltDependencies": [
			"@tailwindcss/oxide",
			"@vercel/speed-insights",
			"esbuild"
		]
	},
	"dependencies": {
		"@openfoodfacts/openfoodfacts-webcomponents": "^1.7.0",
		"@webcomponents/webcomponentsjs": "^2.8.0"
	}
}
