{
	"name": "openfoodfacts-sveltekit",
	"version": "0.0.1",
	"private": true,
	"description": "Modern JavaScript frontend for Open Food Facts",
	"license": "AGPL-3.0",
	"repository": {
		"type": "git",
		"url": "git+https://github.com/openfoodfacts/openfoodfacts-explorer.git"
	},
	"engines": {
		"node": ">=18.0.0",
		"pnpm": ">=8.0.0"
	},
	"scripts": {
		"dev": "vite dev",
		"build": "vite build",
		"preview": "vite preview",
		"check": "svelte-kit sync && svelte-check --tsconfig ./tsconfig.json",
		"check:watch": "svelte-kit sync && svelte-check --tsconfig ./tsconfig.json --watch",
		"lint": "prettier --check . && eslint .",
		"format": "prettier --write .",
		"api:folksonomy": "openapi-typescript https://api.folksonomy.openfoodfacts.org/openapi.json --output src/lib/api/folksonomy.d.ts",
		"api:prices": "openapi-typescript https://prices.openfoodfacts.net/api/schema --output src/lib/api/prices.d.ts",
		"api": "pnpm run api:folksonomy && pnpm run api:prices",
		"prepare": "husky",
		"pre-commit": "pnpm format"
	},
	"devDependencies": {
		"@crowdin/cli": "^4.9.0",
		"@eslint/eslintrc": "^3.3.1",
		"@eslint/js": "^9.32.0",
		"@fontsource-variable/plus-jakarta-sans": "^5.2.6",
		"@iconify-json/mdi": "^1.2.3",
		"@iconify-json/simple-icons": "^1.2.45",
		"@iconify/tailwind": "^1.2.0",
		"@iconify/tailwind4": "^1.0.6",
		"@openfoodfacts/openfoodfacts-nodejs": "2.0.0-alpha.9",
		"@sinnwerkstatt/sveltekit-matomo": "github:VaiTon/sveltekit-matomo",
		"@sveltejs/adapter-vercel": "^5.8.1",
		"@sveltejs/kit": "^2.26.1",
		"@sveltejs/vite-plugin-svelte": "^6.1.0",
		"@tailwindcss/postcss": "^4.1.11",
		"@tailwindcss/typography": "^0.5.16",
		"@types/leaflet": "^1.9.20",
		"@types/leaflet.markercluster": "^1.5.5",
		"@typescript-eslint/eslint-plugin": "^8.38.0",
		"@typescript-eslint/parser": "^8.38.0",
		"@vercel/speed-insights": "^1.2.0",
		"@zoom-image/core": "^0.41.0",
		"@zoom-image/svelte": "^0.3.4",
		"daisyui": "5.0.50",
		"eslint": "^9.32.0",
		"eslint-config-prettier": "^10.1.8",
		"eslint-plugin-svelte": "^3.11.0",
		"fuse.js": "^7.1.0",
		"globals": "^16.3.0",
		"html5-qrcode": "^2.3.8",
		"husky": "^9.1.7",
		"iso-639-1": "^3.1.5",
		"leaflet": "^1.9.4",
		"openapi-fetch": "^0.14.0",
		"openapi-typescript": "^7.8.0",
		"postcss": "^8.5.6",
		"prettier": "^3.6.2",
		"prettier-plugin-svelte": "^3.4.0",
		"prettier-plugin-tailwindcss": "^0.6.14",
		"svelte": "^5.37.1",
		"svelte-check": "^4.3.0",
		"svelte-eslint-parser": "^1.3.0",
		"svelte-i18n": "^4.0.1",
		"svelte-local-storage-store": "^0.6.4",
		"sveltekit-i18n": "^2.4.2",
		"tailwindcss": "^4.1.11",
		"tailwindcss-opentype": "^1.1.0",
		"tslib": "^2.8.1",
		"typescript": "^5.8.3",
		"typescript-eslint": "^8.38.0",
		"vite": "^6.3.5",
